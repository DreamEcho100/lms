{
  "name": "lms",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "clean": "git clean -xdf node_modules pnpm-lock.yaml",
    "clean:workspaces": "turbo clean && rm -rf node_modules pnpm-lock.yaml",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.4.2",
    "@biomejs/biome": "1.9.4"
  },
  "packageManager": "pnpm@10.10.0",
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 100,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  }
}
