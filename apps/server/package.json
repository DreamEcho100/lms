{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "clean": "git clean -xdf .cache dist .turbo node_modules",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@orpc/client": "^1.2.0",
    "@orpc/server": "^1.2.0",
    "better-auth": "^1.2.7",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.6",
    "ksuid": "^3.0.0",
    "pg": "^8.14.1",
    "rrule": "^2.8.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.1",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  },
  "prettier": {
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 100,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  }
}
